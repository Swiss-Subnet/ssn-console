{
  "dfx": "0.30.1",
  "output_env_file": ".env",
  "version": 1,
  "networks": {
    "local": {
      "bind": "127.0.0.1:8000",
      "type": "ephemeral"
    },
    "test": {
      "type": "persistent",
      "providers": ["https://icp-api.io"]
    },
    "production": {
      "type": "persistent",
      "providers": ["https://icp-api.io"]
    }
  },
  "canisters": {
    "backend": {
      "type": "custom",
      "candid": "src/backend/backend.did",
      "wasm": "target/wasm32-unknown-unknown/release/backend.wasm",
      "build": [
        "pnpm -F @ssn/backend-api build",
        "pnpm -F @ssn/management-canister build",
        "pnpm -F frontend run build",
        "cargo build --target wasm32-unknown-unknown --release -p backend --locked"
      ],
      "declarations": {
        "bindings": ["js", "ts"],
        "output": "./dist"
      },
      "frontend": {},
      "gzip": true,
      "shrink": true,
      "optimize": "cycles"
    },
    "internet_identity": {
      "type": "custom",
      "candid": "https://github.com/dfinity/internet-identity/releases/download/release-2026-01-13/internet_identity.did",
      "wasm": "https://github.com/dfinity/internet-identity/releases/download/release-2026-01-13/internet_identity_dev.wasm.gz",
      "init_arg": "(opt record { captcha_config = opt record { max_unsolved_captchas= 50:nat64; captcha_trigger = variant {Static = variant {CaptchaDisabled}}}})",
      "remote": {
        "id": {
          "ic": "rdmx6-jaaaa-aaaaa-aaadq-cai",
          "test": "rdmx6-jaaaa-aaaaa-aaadq-cai",
          "production": "rdmx6-jaaaa-aaaaa-aaadq-cai"
        }
      },
      "specified_id": "rdmx6-jaaaa-aaaaa-aaadq-cai",
      "frontend": {}
    }
  }
}
